# Port Configuration
OPENWEBUI_PORT=3000

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama-hrd:11434
# OLLAMA_BASE_URLS=http://ollama-hrd-1:11434;http://ollama-hrd-2:11434
CUDA_VISIBLE_DEVICES=0        # HR gets the first GPU out of 2

# Authentication & User Management
WEBUI_AUTH=True
WEBUI_NAME="HR Department AI"
ENABLE_API_KEY=True
ENABLE_SIGNUP=False           # No signup is allowed. Account has to be given by Sys Admin (after confirmation from HR)
DEFAULT_USER_ROLE=pending
ENABLE_ADMIN_CHAT_ACCESS=False

# Feature Toggles
K8S_FLAG=False
ENABLE_OPENAI_API=False
ENABLE_CODE_EXECUTION=False
ENABLE_CODE_INTERPRETER=False
ENABLE_API_KEY_ENDPOINT_RESTRICTIONS=True
ENABLE_ONEDRIVE_INTEGRATION=False
ENABLE_WEB_SEARCH=False
OFFLINE_MODE=False

# File & Search Configuration

## RAG Setup

### Document formats
RAG_DOCS=pdf,docx,txt,md
# INFO: Commented out due to being unnecessary
### Code formats  
#RAG_CODE=py,js,ts,c,cpp
### PowerShell formats
#RAG_PS=ps1,psm1,psd1
### Config formats
#RAG_CONFIG=yaml,yml
### This is the environment variable that's available in OpenWebUI
RAG_ALLOWED_FILE_EXTENSIONS=${RAG_DOCS},${RAG_CODE},${RAG_PS},${RAG_CONFIG}

## Other search settings
RAG_FILE_MAX_SIZE=5
RAG_FILE_MAX_COUNT=10
WEB_SEARCH_ENGINE=duckduckgo

# User Permissions
USER_PERMISSIONS_WORKSPACE_MODELS_ACCESS=False
USER_PERMISSIONS_WORKSPACE_KNOWLEDGE_ACCESS=False
USER_PERMISSIONS_WORKSPACE_PROMPTS_ACCESS=False
USER_PERMISSIONS_WORKSPACE_TOOLS_ACCESS=False

